<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define a welcome file (default landing page) -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet Mapping for CreateuserServlet -->
    <servlet>
        <servlet-name>CreateuserServlet</servlet-name>
        <servlet-class>review.CreateUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateuserServlet</servlet-name>
        <url-pattern>/CreateuserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>review.UserListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/userListServlet</url-pattern>
    </servlet-mapping>
    <!-- Servlet Mapping for DeleteuserServlet -->
    <servlet>
        <servlet-name>DeleteuserServlet</servlet-name>
        <servlet-class>review.DeleteuserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteuserServlet</servlet-name>
        <url-pattern>/DeleteuserServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for UpdateuserServlet -->
    <servlet>
        <servlet-name>UpdateuserServlet</servlet-name>
        <servlet-class>review.UpdateuserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateuserServlet</servlet-name>
        <url-pattern>/UpdateuserServlet</url-pattern>
    </servlet-mapping>
    
    
        <servlet>
        <servlet-name>ListReviewServlet</servlet-name>
        <servlet-class>review.ListReviewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListReviewServlet</servlet-name>
        <url-pattern>/ListReviewServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PaymentViewServlet</servlet-name>
        <servlet-class>booking.PaymentViewServlet</servlet-class>
    </servlet>

    <!-- Map the PaymentViewServlet to a unique URL pattern -->
    <servlet-mapping>
        <servlet-name>PaymentViewServlet</servlet-name>
        <url-pattern>/ViewPayment</url-pattern>
    </servlet-mapping>

    <!-- Define the PaymentInsertServlet -->
    <servlet>
        <servlet-name>PaymentInsertServlet</servlet-name>
        <servlet-class>booking.PaymentInsertServlet</servlet-class>
    </servlet>

    <!-- Map the PaymentInsertServlet to a unique URL pattern -->
    <servlet-mapping>
        <servlet-name>PaymentInsertServlet</servlet-name>
        <url-pattern>/InsertPayment</url-pattern>
    </servlet-mapping>

    <!-- Define the PaymentUpdateServlet -->
  <servlet>
    <servlet-name>PaymentUpdateServlet</servlet-name>
    <servlet-class>booking.PaymentUpdateServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>PaymentUpdateServlet</servlet-name>
    <url-pattern>/paymentUpdateServlet</url-pattern>
</servlet-mapping>

    <!-- Define the PaymentDeleteServlet -->
    <servlet>
        <servlet-name>PaymentDeleteServlet</servlet-name>
        <servlet-class>booking.PaymentDeleteServlet</servlet-class>
    </servlet>

    <!-- Map the PaymentDeleteServlet to a unique URL pattern -->
    <servlet-mapping>
        <servlet-name>PaymentDeleteServlet</servlet-name>
        <url-pattern>/DeletePayment</url-pattern>
    </servlet-mapping>

</web-app>
